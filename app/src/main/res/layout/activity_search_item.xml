<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchItem">

    <TextView
        android:id="@+id/tv_search_back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#34333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_btn"
        android:layout_width="54dp"
        android:layout_height="34dp"
        android:layout_marginTop="18dp"
        android:background="#8BC34A"
        android:gravity="center"
        android:text="검색"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/tv_search_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_item"
        android:layout_width="305dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF"
        android:gravity="center|left"
        android:hint="검색어를 입력하세요."
        android:textColorHint="#686868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_search_item"
        android:layout_width="409dp"
        android:layout_height="797dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_back" />
</androidx.constraintlayout.widget.ConstraintLayout>